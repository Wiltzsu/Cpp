#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    int number;
    int a, b;

    cout << "Choose desired calculation:" << endl;
    cout << "1: subtraction" << endl;
    cout << "2: addition" << endl;
    cout << "3: multiplication" << endl;
    cout << "4: division" << endl;
    cout << "5: Remainder" << endl;
    cout << "Choose a calculation:";
    cin >> number;

    cout << "Input first number:";
    cin >> a;
    cout << "Input second number:";
    cin >> b;

    switch(number){
        case 1:
            cout << a << "-" << b << " = " << a-b << endl;
            break;
        case 2:
            cout << a << "+" << b << " = " << a+b << endl;
            break;
        case 3:
            cout << a << "*" << b << " = " << a*b << endl;
            break;
        case 4:
            cout << a << "/" << b << " = " << a/b << endl;
            break;
        case 5:
            cout << a << "%" << b << " = " << a%b << endl;
            break;
        default:
            break;
    }
    ;}
